<?xml version="1.0" encoding="UTF-8"?>
<blueprint
        xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
        xmlns:cxf="http://cxf.apache.org/blueprint/core">

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <bean id="employeeService" class="ru.vsk.services.EmployeeServiceResource"/>
    <service ref="employeeService" interface="ru.vsk.services.EmployeeService"/>

    <jaxrs:server id="someService" address="http://localhost:9000/">
        <jaxrs:serviceBeans>
            <ref component-id="employeeService"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>
</blueprint>